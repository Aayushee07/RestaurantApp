<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".charger_info"
    android:orientation="vertical"
    android:background="#FFE5BF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#DB5C00"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Immunity Charger"
                android:textColor="#FAF7F7"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="347dp"
                android:layout_height="233dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/imm" />



            <TextView
                android:id="@+id/textView32"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="350dp"
                android:layout_marginRight="350dp"
                android:paddingLeft="5dp"
                android:text="Vegan"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="230dp"
                android:layout_marginRight="230dp"
                android:text="Immunity Booster"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="What makes this dish special"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="This is an ode to all those health freaks who prefer wellness shots to booze shots. There can just not be a better drink with anti-inflammatory properties than this one. The vitamin C helps you fight off the flu season with a smile on your face. C’mon, what more do you need to fall in love with it? "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="154dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="What’s inside"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="93dp"
                android:layout_height="53dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Calories
                              100kcal"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="121dp"
                android:layout_height="53dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-52dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Carbohydrates
                              22g"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>